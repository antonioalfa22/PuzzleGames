<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".igu.sopa.fragments_pasos.Fragment_Paso_Resultado">

    <ScrollView
        android:id="@+id/scrollPRes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="302dp">

            <TextView
                android:id="@+id/txTituloPRes"
                android:layout_width="357dp"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:paddingEnd="0dp"
                android:paddingStart="2dp"
                android:text="RESULTADO"
                android:textAlignment="viewStart"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/lineaHorizontal_pasoRes"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txTituloPRes" />

            <ImageView
                android:id="@+id/imgResultado"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="5dp"
                android:contentDescription="Imagen sacada de la galerÃ­a" />

            <TextView
                android:id="@+id/txDescripcionPRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="6dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:paddingTop="4dp"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineaHorizontal_pasoRes" />

            <TextView
                android:id="@+id/txPalabrasBuscadasEncontradas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
